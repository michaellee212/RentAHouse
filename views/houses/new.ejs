<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Create new listing!</h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/houses" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="price">Price per night</label>
                <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input class="form-control" type="text" name="image" placeholder="Image URL">
            </div>
            <div class="form-group">
                <label for="bedrooms">Bedrooms</label>
                <input class="form-control" type="number" name="bedrooms" placeholder="Bedrooms">
            </div>
            <div class="form-group">
                <label for="beds">Beds</label>
                <input class="form-control" type="number" name="beds" placeholder="Beds">
            </div>
            <div class="form-group">
                <label for="bathrooms">Bathrooms</label>
                <input class="form-control" type="number" name="bathrooms" placeholder="Bathrooms">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location"
                    placeholder="423 Irving Street San Francisco, CA" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" type="text" name="description" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <button class="btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/houses">Back to houses</a>
    </div>
</div>

<% include ../partials/footer %>