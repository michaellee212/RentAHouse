<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Edit House: <%= house.name%></h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/houses/<%=house._id%>/?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="house[name]" value="<%=house.name%>">
            </div>
            <div class="form-group">
                <label for="price">Price per night</label>
                <input class="form-control" type="number" name="house[price]" value="<%=house.price %>" min="
                    0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input class="form-control" type="text" name="house[image]" value="<%=house.image%>">
            </div>
            <div class="form-group">
                <label for="bedrooms">Bedrooms</label>
                <input class="form-control" type="number" name="house[bedrooms]" value="<%=house.bedrooms%>">
            </div>
            <div class="form-group">
                <label for="beds">Beds</label>
                <input class="form-control" type="number" name="house[beds]" value="<%=house.beds%>">
            </div>
            <div class="form-group">
                <label for="bathrooms">Bathrooms</label>
                <input class="form-control" type="number" name="house[bathrooms]" value="<%=house.bathrooms%>">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="house[location]" value="<%=house.location%>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="house[description]" value="<%=house.description%>">
            </div>
            <div class="form-group">
                <button class="btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/houses">Back to houses</a>
    </div>
</div>

<% include ../partials/footer %>