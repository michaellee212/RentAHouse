<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Add new comment to: <%= house.name %></h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/houses/<%= house._id %>/comments" method="POST">
            <div class="form-group">
                <textarea class="form-control" type="text" name="comment[text]" placeholder="text"></textarea>
            </div>
            <div class="form-group">
                <button class="btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/houses">Back to houses</a>
    </div>
</div>



